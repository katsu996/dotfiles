{{/* Windows Work用の設定 */}}
[tools]
bun = "latest"
deno = "latest"
go = "latest"
java = "24"
node = "20"
npm = "10"
pnpm = "10"
python = "3.13"
rust = "latest"
uv = "latest"
yarn = "4"
zig = "latest"
"aqua:cli/cli" = "latest"
"npm:@anthropic-ai/claude-code" = "latest"
"npm:@google/gemini-cli" = "latest"
"npm:ccusage" = "latest"

[tasks.cc]
description = "Claude Code Bypass all permission checks"
run = "claude --dangerously-skip-permissions"

[tasks.cc-daily]
description = "ccusage Daily token usage and costs"
run = "ccusage daily"

[tasks.cc-json]
description = "ccusage Daily token usage and costs(Daily token usage and costs)"
run = "ccusage daily --json"

[tasks.cc-live]
description = "ccusage Live monitoring"
run = "ccusage blocks --live"

[tasks.dot]
description = "chezmoiを最新化"
run = "chezmoi update --apply"

[tasks.dotfiles]
description = "chezmoiを最新化"
run = "chezmoi update --apply"

[tasks.o]
description = "更新可能なパッケージを出力"
run = [
    "mise outdated",
    "winget upgrade"
]

[tasks.up-all]
description = "mise, WinGetのパッケージを更新"
run = [
    "mise upgrade",
    "winget upgrade --all"
]

[tasks.up-winget]
description = "WinGetのパッケージを更新"
run = "winget upgrade --all"

[settings]
idiomatic_version_file_enable_tools = ["python"]
experimental = true

[settings.pipx]
uvx = true